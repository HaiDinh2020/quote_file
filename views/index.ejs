    <% var data6 = [] %>
    
    <% for (var item of data) { %>
        <% if(item.type == 1) { %>
            <% data1.push(item) %>
        <% } else if(item.type == 2) { %>
            <% data2.push(item) %>
        <% } else if(item.type == 3) { %>
            <% data3.push(item) %>
        <% } else if(item.type == 4) { %>
