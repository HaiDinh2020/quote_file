<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-primary p-2">
        <div class="container-fluid">
            <a class="navbar-brand" href="form">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="form">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="createform">Create</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container p-3">

        <form>

            <% let type=1 %>
                <div class="mb-3">
                    <label for="website" class="form-label">website</label>
                    <select id="website" class="form-select" aria-label="Default select example"
                        onchange="changeType(this.value)">
                        <option selected>Open this select website</option>

                        <% websites.map((item, index)=> { %>
                            <option value="<%= item.type %>">
                                <%= item.website %>
                            </option>
                        <% }) %>
                    </select>
                </div>


                <div class="mb-3">
                    <label for="position" class="form-label">Positon</label>
                    <input type="text" class="form-control" id="position">
                </div>
                <div class="mb-3">
                    <label for="dimensions" class="form-label">Dimensions</label>
                    <input type="text" class="form-control" id="dimensions">
                </div>
                <div class="mb-3">
                    <label for="platform" class="form-label">platform</label>
                    <input type="text" class="form-control" id="platform" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="link_demo" class="form-label">Link_demo</label>
                    <input type="text" class="form-control" id="link_demo" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="display_link_demo" class="form-label">Display link demo</label>
                    <input type="text" class="form-control" id="display_link_demo" aria-describedby="emailHelp">
                </div>

                <div class="mb-3 type 1 2 3 4 6">
                    <label for="buying_method" class="form-label">Cách tính giá</label>
                    <input type="text" class="form-control" id="buying_method">
                </div>
                <div class="mb-3 type 1 3 4 6">
                    <label for="homepage" class="form-label">Trang chủ</label>
                    <input type="text" class="form-control" id="homepage">
                </div>
                <div class="mb-3 type 1 4">
                    <label for="c_s_roadblock" class="form-label">Roadblock xuyên site</label>
                    <input type="text" class="form-control" id="c_s_roadblock">
                </div>
                <div class="mb-3 type 1 2 4 5">
                    <label for="ctr" class="form-label">CTR trung bình (%)</label>
                    <input type="text" class="form-control" id="ctr">
                </div>
                <div class="mb-3 type 1 3 4 5">
                    <label for="est" class="form-label">Est. Traffic</label>
                    <input type="text" class="form-control" id="est">
                </div>
                <div class="mb-3 type 2">
                    <label for="price" class="form-label">Đơn giá(VNĐ)</label>
                    <input type="text" class="form-control" id="price">
                </div>
                <div class="mb-3 type 5">
                    <label for="week" class="form-label">Tuần (Chia sẻ 3)</label>
                    <input type="text" class="form-control" id="week">
                </div>
                <div class="mb-3 type 5">
                    <label for="month" class="form-label">Tháng (Chia sẻ 3)</label>
                    <input type="text" class="form-control" id="month">
                </div>
                <div class="mb-3 type 5">
                    <label for="quarter_year" class="form-label">Quý (Chia sẻ 3)</label>
                    <input type="text" class="form-control" id="quarter_year">
                </div>
                <div class="mb-3 type 4">
                    <label for="e_i" class="form-label">Est.Impression</label>
                    <input type="text" class="form-control" id="e_i">
                </div>
                <div class="mb-3 type 3 6">
                    <label for="cross_site" class="form-label">Xuyên Trang (Đã gôm VAT)</label>
                    <input type="text" class="form-control" id="cross_site">
                </div>
                <div class="mb-3 type 6">
                    <label for="detailed_cross_site" class="form-label">Xuyên trang chi tiết</label>
                    <input type="text" class="form-control" id="link_demo">
                </div>
                <div class="mb-3 type 3">
                    <label for="subject" class="form-label">CHUYÊN MỤC (*) (Đã gồm VAT)</label>
                    <input type="text" class="form-control" id="subject">
                </div>
                <div class="mb-3 type 2">
                    <label for="note" class="form-label">Note</label>
                    <input type="text" class="form-control" id="note">
                </div>




                <button  class="btn btn-primary" onsubmit="submitData">Submit</button>
        </form>
    </div>
</body>
<script>
    const inputs = document.querySelectorAll("input")
    inputs.forEach((item, index) => {
        item.parentElement.style.display = "none"
    })
    const changeType = (selectedType) => {

        inputs.forEach((item, index) => {
            item.parentElement.style.display = "block"
        })

        type = parseInt(selectedType);
        const types = document.querySelectorAll(".type")
        types.forEach((item, index) => {
            typeTableInput = item.className.split(" ").includes("" + type)
            console.log(typeTableInput)
            item.style.display = "none"
            if (typeTableInput) {
                item.style.display = "block";
            }
        })
    }

    const submitData = (e) => {
        e.preventDefault()
        console.log(inputs.values)
    }
</script>

</html>